<div id="tag-navigator" class="page-subhead">
    <ul>
        <li class="tag-link slug-all active"><button onclick="jaredBlog.filterPosts('all')">All</button></li>
        {{#get "tags" limit="all"}}
          {{#foreach tags}}
            <li class="tag-link slug-{{slug}}"><button onclick="jaredBlog.filterPosts('{{slug}}')">{{name}}</button></li>
          {{/foreach}}
        {{/get}}
    </ul>
</div>

